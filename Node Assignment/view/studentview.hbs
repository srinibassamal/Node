<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Student Dashboard</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light navbar_backcolor">
    <div class="container-fluid">
      <h6 class="mx-auto">Result Management System <small>(Student Dashboard)</small> </h6>
      <a href="/" class="btn btn-warning">Logout</a>
    </div>
  </nav>
    <div class="container mt-1">
        <div class="row py-1 ">
            <strong class="text-center">Search Your Result</strong><br>
            <div class="col-md-6 offset-md-3">
            <a href="/">Back</a>
                {{!-- <a href="/">Home</a> &nbsp;&nbsp; --}}
                <fieldset class="form-group border p-3">
                    {{#if mesg1}}
                        <h6 class="text-danger">Result Not Found...</h6>
                    {{/if}}
                    <form action="/showresults" method="post">
                        <div class="row mb-3">
                            <div class="col-3 col-md-4 text-start">
                                <label for="" class="form-label">Roll Number</label>
                            </div>
                            <div class="col-9 col-md-8 text-center">
                                <input type="text" class="form-input m-0 w-100 rounded border-1" name="rollnumber"
                                    required placeholder="Roll Number" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-3 col-md-4 text-start">
                                <label for="" class="form-label">DOB</label>
                            </div>
                            <div class="col-9 col-md-8 text-center">
                                <input type="date" class="form-input m-0 w-100 rounded border-1" name="dob" required
                                    placeholder="DOB" />
                            </div>
                        </div>
                        <div class="row mb-3 mt-2">
                            <div class="col align-self-center">
                                <button type="submit" class="float-right btn btn-success">Search</button>
                            </div>
                        </div>
                    </form>
                </fieldset>
            </div>
        </div>
        <hr>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
