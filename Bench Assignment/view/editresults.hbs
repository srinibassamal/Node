<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Add Result</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(149, 224, 199);">
    <div class="container-fluid">
      <h6 class="mx-auto">Result Management System <small>(Teacher Dashboard)</small> </h6>
      <a href="/" class="btn btn-warning">Logout</a>
    </div>
  </nav>
    <div class="container">
        <div class="modal-body col-md-8 offset-md-2">
            <a href="/teacherview">Home</a>

            <fieldset class="form-group border p-3">
                <p class="mx-auto"><u><b> Update Students Records.</b></u></p>

                <form action="/updateresults/{{data.id}}" method="post">
                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="" class="form-label">SID</label>
                        </div>
                        <div class="col-9 col-md-8 text-center ">
                            <input type="text" value="{{data.id}}" class="bg-secondary form-input m-0 w-100 rounded border-1" name="id"
                                required readonly/>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="" class="form-label">Roll Number</label>
                        </div>
                        <div class="col-9 col-md-8 text-center">
                            <input type="text" value="{{data.rollnumber}}" class="form-input m-0 w-100 rounded border-1" name="rollnumber"
                                required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="" class="form-label">Name</label>
                        </div>
                        <div class="col-9 col-md-8 text-center">
                            <input type="text" value="{{data.name}}" class="form-input m-0 w-100 rounded border-1" name="name" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="Date" class="form-label">DOB</label>
                        </div>
                        <div class="col-9 col-md-8 text-center">
                            <input type="date" value="{{data.dob}}" class="form-input m-0 w-100 rounded border-1" name="dob" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="" class="form-label">Score</label>
                        </div>
                        <div class="col-9 col-md-8 text-center">
                            <input type="text" value="{{data.score}}" class="form-input m-0 w-100 rounded border-1" name="score" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-3 col-md-4 text-start">
                            <label for="" class="form-label">Satus</label>
                        </div>
                        <div class="col-9 col-md-8 text-center">
                            <input type="radio" name="status" id="" value="passed"> Pass &nbsp;&nbsp;
                            <input type="radio" name="status" id="" value="failed"> Fail
                        </div>
                    </div>

                    <div class="row mb-3 mt-2">
                        <div class="col">
                            <button class="btn btn-danger" type="reset" onclick="">Clear</button>
                            <button type="submit" class="btn btn-warning px-2 mx-2">Update</button>
                        </div>
                    </div>
                </form>

            </fieldset>
        </div>
        <hr>

        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

