<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="style.css">
    <title>Results of: {{item.name}}</title>
</head>

<body>
    
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <a href="/studentview">Search Next Result</a>
                <div class="card shadow-lg">

                    <div class="card-body">
                        <span class="card-title text-center"><img src="nagarro_logo.png" alt="" width="150" height="30"></span>
                        <div class="card-title text-center"> 
                            <strong>Result of: {{item.name}}</strong>
                        </div>
                        <div class="row">
                            <label for="roll" class="col-sm-5 col-form-label"><b> Status :</b></label>
                            <div class="col-sm-7 ">
                                    <b class="text-danger">{{item.status}}</b>
                            </div>
                        </div>
                        <div class="row">
                            <label for="roll" class="col-sm-5 col-form-label"><b> Roll :</b></label>
                            <div class="col-sm-7 ">
                                <p>{{item.rollnumber}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <label for="name" class="col-sm-5 col-form-label"><b>Name :</b></label>
                            <div class="col-sm-7 ">
                                <p>{{item.name}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <label for="dob" class="col-sm-5 col-form-label"><b>Date of Birth :</b> </label>
                            <div class="col-sm-7  ">
                                <p>{{dateFormat item.dob "L"}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <label for="score" class="col-sm-5 col-form-label"><b>Score :</b></label>
                            <div class="col-sm-7 ">
                                <p>{{item.score}}</p>
                            </div>
                        </div>
                        <button onclick="printFunction()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function printFunction() {
            window.print();
        }
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
