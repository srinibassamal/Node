<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <title>Teacher Dashboard</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light navbar_backcolor">
    <div class="container-fluid">
      <h6 class="mx-auto">Result Management System <small>(Teacher Dashboard)</small> </h6>
      <a href="/" class="btn btn-warning">Logout</a>
    </div>
  </nav>
  <div class="container mt-2">
    <div>
      <div class="row mb-3 justify-content-around">
      <div class="col">
        <h6>Total Students: {{data.length}}</h6>
      </div>
      <div class="col text-end">
        <a href="/addresults" class="btn btn-primary">Add Result</a>
      </div>
    </div>
      <fieldset class="form-group border p-3">
        <!-- <legend  class="w-auto px-2">Total 4 Students</legend><hr> -->
        <table class="table text-center">
          <thead>
            <tr>
              <th scope="col">S.No</th>
              <th scope="col">Roll</th>
              <th scope="col">Name</th>
              <th scope="col">DOB</th>
              <th scope="col">Score</th>
              <th scope="col">Status</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#data}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{rollnumber}}</td>
              <td>{{name}}</td>
              <td>{{dateFormat dob "L"}}</td>
              <td>{{score}}</td>
              <td>{{status}}</td>
              <td>
                <a href="./editresults/{{id}}" class="btn  btn-sm"><i class="bi bi-pencil-square"></i></a>
                <a href="./removestudent/{{id}}" class="btn btn-sm"><i class="bi bi-archive-fill"></i></a>
              </td>
            </tr>
            {{/data}}
          </tbody>
        </table>
      </fieldset>
    </div>
  </div>
  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
